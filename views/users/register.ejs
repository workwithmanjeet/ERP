
<% layout('layouts/boilerplate') %> 
<div class="row">
    <a href="/login">LogIn</a>
    <h1 class="text-center">User SignIn </h1>
   

    <div class="col-6 offset-3">
        <form action="/register" method="POST" class="formvalidation" >
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="user[username]"required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="user[email]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="UserType">UserType</label>
                <select class="form-select" name="user[userType]" required aria-label="Default select example">
                    <option selected value="">Select</option>
                    <option value="admin">Admin</option>
                    <option value="teacher">Teacher</option>
                    <option value="student">Student</option>
                </select>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="user[password]"required>
            </div>
            

            <div class="mb-3">
                <button class="btn btn-success">Register</button>
            </div>
        </form>
        
    </div>
</div>







